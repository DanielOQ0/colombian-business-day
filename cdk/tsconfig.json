{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "rootDir": "../",
    "resolveJsonModule": true
  },
  "include": ["./bin/**/*.ts", "./lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
